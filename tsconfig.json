{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2018", "dom"],
    "paths": {
      "@angular-ssr-prerendering-bug/website": ["libs/website/src/index.ts"],
      "@angular-ssr-prerendering-bug/admin": ["libs/admin/src/index.ts"],
      "@angular-ssr-prerendering-bug/dashboard": [
        "libs/dashboard/src/index.ts"
      ],
      "@angular-ssr-prerendering-bug/artificial-intelligence": [
        "libs/artificial-intelligence/src/index.ts"
      ]
    },
    "rootDir": "."
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}
